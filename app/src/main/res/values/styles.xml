<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_h2title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1A1A1E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/layer_login_edit_bg</item>
    </style>

    <style name="style_menu_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/shape_menu_btn_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="style_radio_btn">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <declare-styleable name="RoundBackgroundView">
        <attr name="round_background_color" format="color" />
        <attr name="round_radius" format="dimension" />
        <attr name="round_border_color" format="color" />
        <attr name="round_border_width" format="dimension" />
        <attr name="round_border_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SeekBarWidget">
        <attr name="seek_maxProgress" format="integer" />
        <attr name="seek_minProgress" format="integer" />
        <attr name="seek_progress" format="integer" />
        <attr name="seek_circleRadius" format="dimension" />
        <attr name="seek_circleStrokeWidth" format="dimension" />
        <attr name="seek_lineHeight" format="dimension" />
        <attr name="seek_backgroundColor" format="color" />
        <attr name="seek_circleStrokeColor" format="color" />
        <attr name="seek_maxColor" format="color" />
        <attr name="seek_startColor" format="color" />
    </declare-styleable>
</resources>